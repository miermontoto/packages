{
  "name": "@miermontoto/packages",
  "description": "TypeScript packages collection for Node.js",
  "author": "Juan Mier",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r exec rimraf dist node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@types/node": "^22.12.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "neverBuiltDependencies": []
  }
}
